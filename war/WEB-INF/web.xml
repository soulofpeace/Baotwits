<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  
  <servlet>
    <servlet-name>AuthServiceServlet</servlet-name>
    <servlet-class>com.appspot.baotwits.server.controller.AuthServiceImpl</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>TwitTwitServiceServlet</servlet-name>
    <servlet-class>com.appspot.baotwits.server.controller.TwitTwitServiceImpl</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.appspot.baotwits.server.servlet.LoginServlet</servlet-class>
  </servlet>
  

  
  <servlet-mapping>
    <servlet-name>TwitTwitServiceServlet</servlet-name>
    <url-pattern>/baotwits/twittwit</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>AuthServiceServlet</servlet-name>
    <url-pattern>/baotwits/auth</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Index.html</welcome-file>
  </welcome-file-list>

</web-app>
